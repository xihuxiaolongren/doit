<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/select_tags_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap">

    </com.google.android.flexbox.FlexboxLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/tagET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:hint="输入标签"
        android:imeActionLabel="@string/action_next"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="14sp"
        app:met_baseColor="@color/titleTextColor"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/titleTextColor"
        app:met_textColor="@color/titleTextColor"
        app:met_textColorHint="@color/titleTextColor" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/all_tags_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap">

    </com.google.android.flexbox.FlexboxLayout>


</LinearLayout>