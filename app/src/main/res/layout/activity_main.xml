<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.xihuxiaolong.justdoit.common.widget.DayNightBackgroundView
        android:id="@+id/day_night_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:animationDuration="2000" />

    <me.xihuxiaolong.library.widget.NonSwipeableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/sky"
        app:bb_tabXmlResource="@xml/bottombar_tabs_color_changing"
        app:bb_titleTextAppearance="@style/MyTextAppearance.Bottom"
        app:bb_behavior="shifting|underNavbar"
        app:bb_inActiveTabColor="@color/titleTextColor"
        app:bb_activeTabColor="@color/titleTextColor"
        android:layout_marginBottom="-56dp"/>

</RelativeLayout>
