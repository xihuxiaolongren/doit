<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowBackground">@color/sky</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/titleTextColor</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/actionbar_space_between_icon_and_title</item>-->

    </style>

    <!--夜间主题 专为首页闪屏 无效！！！windowBackground 似乎在application生效前就已经加载了-->
    <!--<style name="NightTheme" parent="AppTheme">-->
        <!--<item name="android:windowBackground">@color/notificationNightSky</item>-->
    <!--</style>-->

    <!--<style name="SplashTheme" parent="AppTheme">-->
        <!--<item name="android:windowBackground">@color/sky</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="AppTheme.TransNav" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="MyTextAppearance.BodyNormal" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/contentTextSize</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="MyTextAppearance.BodySmall" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/contentSmallTextSize</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="MyTextAppearance.BodyLarge" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/contentLargeTextSize</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="MyTextAppearance.BodyNormal.Shadow" parent="MyTextAppearance.BodyNormal">
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyTextAppearance.BodySmall.Shadow" parent="MyTextAppearance.BodySmall">
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyTextAppearance.BodyLarge.Shadow" parent="MyTextAppearance.BodyLarge">
        <item name="android:textSize">@dimen/contentLargeTextSize</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyTextAppearance.Bottom" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/contentTextSize</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/titleTextColor</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MyActionButtonStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:minWidth">20dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CropTheme" parent="android:Theme.DeviceDefault" tools:ignore="NewApi">
        <item name="cropImageStyle">@style/Widget.CropImageView</item>
    </style>

    <style name="Widget.CropImageView" parent="android:Widget">
        <item name="showThirds">true</item>
        <item name="showCircle">false</item>
        <item name="showHandles">always</item>
        <item name="highlightColor">@android:color/white</item>
    </style>

    <style name="MyDialogStyle" parent="AppTheme">
        <item name="android:background">#00000000</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
